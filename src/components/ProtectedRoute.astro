interface ProtectedRouteProps {
  children?: any;
}

// Props en Astro
const { children }: ProtectedRouteProps = Astro.props;

// Comprobar el token
const token = typeof window !== 'undefined' ? localStorage.getItem('token') : null;

// Redirecci√≥n si no hay token
if (!token) {
  window.location.href = '/login';
}
